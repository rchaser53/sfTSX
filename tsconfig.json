{
  "compilerOptions": {
      "noImplicitAny": false,
      "removeComments": false,
      "noLib": false,
      "target": "es2015",
      "allowJs": false,
      "jsx": "react",
      "module": "es2015",
      "experimentalDecorators": true,
      "lib": [
        "es2015",
        "dom",
        "es2016.array.include",
        "es2017.object"
      ]
    },
    "compileOnSave": false,
    "include": [
      "typings/**/*.ts",
      "src/**/*.ts",
      "src/**/*.tsx"
    ]
}

